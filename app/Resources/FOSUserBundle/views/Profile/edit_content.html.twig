<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit form-horizontal">
    <div class="form-group">
        <div class="col-lg-3">
            <label class="control-label">ユーザー名:</label>
        </div>
        <div class="col-lg-9">
            {{ form_errors(form.username) }}
            {{ form_widget(form.username,{'attr':{'class':'form-control','placeholder':'ユーザー名' } }) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-3">
            <label class="control-label">メールアドレス:</label>
        </div>
        <div class="col-lg-9">
            {{ form_errors(form.email) }}
            {{ form_widget(form.email,{'attr':{'class':'form-control','placeholder':'メールアドレス' } }) }}
        </div>
    </div>
    <hr>
    <div class="form-group">
        <div class="col-lg-3">
            <label class="control-label">パスワード認証:</label>
        </div>
        <div class="col-lg-9">
            {{ form_widget (form.current_password,{'attr':{'class':'form-control','placeholder':'パスワード' } }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-lg-3"></div>
        <div class="col-lg-9">
            <input type="submit" class="btn btn-info" value="更新"/>
        </div>
    </div>
</form>
