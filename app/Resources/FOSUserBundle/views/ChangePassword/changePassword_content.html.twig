<form action="{{ path('fos_user_change_password') }}" {{ form_enctype(form) }} method="POST" class="fos_user_change_password form-horizontal">
    <div class="form-group">
        <div class="col-lg-3">
            <label class="control-label">現在のパスワード:</label>
        </div>
        <div class="col-lg-9">
            {{ form_widget (form.current_password,{'attr':{'class':'form-control','placeholder':'パスワード' } }) }}
        </div>
    </div>
    <hr>
    <div class="form-group">
        <div class="col-lg-3">
            <label class="control-label">新しいパスワード:</label>
        </div>
        <div class="col-lg-9">
            {{ form_widget (form.plainPassword.first,{'attr':{'class':'form-control','placeholder':'新しいパスワード' } }) }}
        </div>
    </div>
    <div class="form-group">
        <div class="col-lg-3">
            <label>新しいパスワード（確認）:</label>
        </div>
        <div class="col-lg-9">
            {{ form_widget (form.plainPassword.second,{'attr':{'class':'form-control','placeholder':'新しいパスワード（確認）' } }) }}
        </div>
    </div>
    {{ form_rest(form) }}
    <div class="form-group">
        <div class="col-lg-3"></div>
        <div class="col-lg-9">
            <input type="submit" class="btn btn-info" value="更新"/>
        </div>
    </div>
</form>
