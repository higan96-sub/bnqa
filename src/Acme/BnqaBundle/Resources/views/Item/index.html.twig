                    <li><a href="#note" style="padding-left: 30px">DVD</a></li>
                    <li><a href="#note" style="padding-left: 30px">ゲーム</a></li>
                    <li><a href="#note" style="padding-left: 30px">ホビー</a></li>
                </ul>
            </div>
            <div class="span9">
                <ul class="nav nav-tabs" style="margin-bottom: 10px">
                    <li class="active"><a href="#week">Week</a></li>
                    <li><a href="#month">Month</a></li>
                    <li><a href="#year">Year</a></li>
                </ul>
                {% for item in items %}
                    <a href="{{ path('item_show',{'asin_code':item.asin_code}) }}">
                        <div class="row-fluid unit sidebar-unit">
                            <div class="span2">
                                {% if item.img_url == null %}
                                    <img src="{{ asset('bundles/acmebnqa/images/no-image-small.gif') }}" class="img-polaroid">
                                {% else %}
                                    <img src="{{ asset(item.img_url|replace({'90':150}) ) }}" class="img-polaroid">
                                {% endif %}
                            </div>
                            <div class="span10">
                                <h4>{{ loop.index }}.</h4>
                                {{ item.title }}
                            </div>
                        </div>
                    </a>
                {% endfor %}
            </div>
        </div>
    {% endblock content %}