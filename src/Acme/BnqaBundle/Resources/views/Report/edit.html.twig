<form action="{{ path('report_edit_report') }}" method="post" class="form-horizontal">
    <div class="modal-body">
        <div class="control-group">
            <label class="control-label">レポートの種類</label>
            {{ form_errors(form.type) }}
            {{ form_widget(form.type,{'attr':{'class':'form-control' }} ) }}
        </div>
        <div class="control-group">
            <label class="control-label">本文</label>
            {{ form_errors(form.body) }}
            {{ form_widget(form.body,{'attr':{'class':'form-control','rows':'4' }}) }}
        </div>
        {{ form_rest(form) }}
    </div>
    <div class="modal-footer">
        <div class="row">
            <div class="col-12">
                <input type="submit" value="送信" class="btn btn-primary pull-right" style="margin-left: 5px;">
                <button class="btn" data-dismiss="modal" aria-hidden="true">閉じる</button>
            </div>
        </div>
    </div>
</form>
